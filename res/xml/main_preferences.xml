<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent"
        android:layout_width="fill_parent">

    <PreferenceCategory
            android:title="Settings">

        <EditTextPreference
                android:defaultValue="8"
                android:dialogTitle="Display Timeout in seconds"
                android:inputType="number"
                android:key="pref_timeout"
                android:title="Timeout"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Filters">

        <Preference android:key="editFilters"
                    android:title="Edit Filters"/>
        <Preference android:key="addPackage"
                    android:title="Add Packages"/>


    </PreferenceCategory>

    <PreferenceCategory
            android:title="Debug">

        <Preference android:key="makeConfig" android:title="Make Test Config"/>

    </PreferenceCategory>

</PreferenceScreen>